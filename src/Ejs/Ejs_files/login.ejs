<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <style>
        .form{
            height: 50vh;
        }
        *{
            margin: 0;
            padding: 0;
            font-family: 'Times New Roman', Times, serif;
        }
    
        .container{
            width: 100%;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background-repeat: no-repeat;
            background-position: center center; 
            background-size: cover;
        }
        .form{
            display: flex;
            flex-direction: column;
            width: 40%;
            height: 70vh;
            padding: 20px;
            border: 1px solid rgba(107, 106, 106, 0.8);
            border-radius: 12px;
            gap: 10px;
            backdrop-filter: blur(20px);
            box-shadow: 0px 0px 15px black;
        }
        .form h2{
            width: 100%;
            text-align: center;
            font-size: 30px;
            color: #fff;
        }
        label{
            font-size: 22px;
            color: #fff;
            font-weight: bold;
        }
        input{
            height: calc(100%/6);    
            padding: 10px;
            border: 1px solid rgba(107, 106, 106, 0.8);
            border-radius: 12px;
            font-size: 20px;
            margin-bottom: 10px;
            color: hsl(0, 0%, 13%);
            /* background-color: rgba(255, 255, 255, 0.712); */
        }
        .sign_btn{
            backdrop-filter: blur(20px);
            color: #fff;
            font-weight: bold;
            margin-top: 10px;
            background-color:rgba(34, 112, 230, 0.719);
        }
        button{
            width: 100%;
            height: 80px;
            border-radius: 10px;
            justify-content: center;
            text-align: center;
            margin-top: 10px;
            text-align: center;
            font-size: 18px;
            color: black;
            background-color: rgba(34, 112, 230, 0.719);
        }
        </style>
</head>
<body>
    <div class="container">
        <form action="/login" method="POST" class="form">
            
            <h2>Login page</h2>

            <label for="email">Enter Email</label>
            <input type="email" id="email" name="email" placeholder="Enter your email...">

            <label for="password">Enter Password</label>
            <input type="password" name="password" id="password" placeholder="Enter password">


            <input type="submit" value="SIGN IN" class="sign_btn">
            <button onclick="Start()">SIGN UP</button>
        </form>
        
    </div>
    <script>
        const emailement=document.querySelector("#email")
        const passwordelement=document.querySelector("#password")
        const formelement=document.querySelector(".form")
        formelement.addEventListener("submit",async(e)=>{
            e.preventDefault()
            const email=emailement.value
            const password=passwordelement.value
           const data={
            email,password
           }
           const res=await fetch("http://localhost:4040/auth/login",{
            method:"POST",
            headers: {
                "Content-type": "application/json",
                },
                body:JSON.stringify(data)
           })
           const result =await res.json()
           if(result.message=='kirildi'){
            window.open("http://localhost:4040/home")
           }else{
                alert("Ro'yxatdan o'tishingiz kerak")
           }
        })
        function Start(){
            window.open("http://localhost:4040/register")
        }
    </script>
</body>
</html>